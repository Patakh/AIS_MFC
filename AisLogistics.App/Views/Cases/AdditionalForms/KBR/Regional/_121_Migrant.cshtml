@model _121_MigrantModel

<div id="additional-data-content">
    <div class="row g-3">
        <div class="col-8 mx-auto">
            <div class="row mb-3">
                <div class="col-5">
                    <label class="form-label" asp-for="DateRegistration">Дата регистрации постоянного адреса</label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text">
                            <i class="bi bi-calendar3"></i>
                        </span>
                        <input asp-for="DateRegistration" type="text"
                               class="form-control pickdate">
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label" asp-for="AdresPlaceStay">Адрес регистрации по месту пребывания</label>
                    <input type="text" asp-for="AdresPlaceStay" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label" asp-for="AdresPlaceResidence">Адрес предыдущего места жительства</label>
                    <input type="text" asp-for="AdresPlaceResidence" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="Notifications" class="form-label">Уведомления о принятом решении прошу направить</label>
                    <select class="select2-search" asp-for="Notifications">
                        <option value="по телефону">по телефону</option>
                        <option value="через МФЦ">через МФЦ</option>
                        <option value="по e-mail">по e-mail</option>
                        <option value="почтой России на адрес:">почтой России</option>
                    </select>
                </div>
                <div class="col-12" RussianPostAddress>
                    <label asp-for="RussianPostAddress" class="form-label">Адрес почты</label>
                    <input type="text" asp-for="RussianPostAddress" class="form-control">
                </div>
            </div>

            <h6 class="my-2">Реквизиты счета, открытого в кредитной организации, зарегистрированной на территории РФ, для перечисления единовременной выплаты </h6>
            <div class="row mb-3">
                <div class="col-4">
                    <label class="form-label" asp-for="PersonalAccount">Номер счета</label>
                    <input type="text" asp-for="PersonalAccount" class="form-control">
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="NameCreditOrgan">Наименование банка</label>
                    <input type="text" asp-for="NameCreditOrgan" class="form-control">
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="BIK">БИК</label>
                    <input type="text" asp-for="BIK" class="form-control">
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="Corset">Корсчет</label>
                    <input type="text" asp-for="Corset" class="form-control">
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="INN">ИНН</label>
                    <input type="text" asp-for="INN" class="form-control">
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="KPP">КПП</label>
                    <input type="text" asp-for="KPP" class="form-control">
                </div>
            </div>

            <h5 class="my-2">На ребенка</h5>
            <div id="FamilyMembersList" data-clone-list>
                @for (var i = 0; i < Model.FamilyMembersList.Length; i++)
                {
                    <div class="g-3" id="clone@(i)" data-id="@i" data-clone>
                        <hr />
                        <h6 class="my-2 title">Ребенк @(i + 1)</h6>
                        <div class="row mb-3 align-items-center">
                            <div class="col-11">
                                <div class="row mb-3">
                                    <div class="col-8">
                                        <label asp-for="FamilyMembersList[i].FIO" class="form-label">ФИО</label>
                                        <input type="text" asp-for="FamilyMembersList[i].FIO" class="form-control">
                                    </div>
                                    <div class="col">
                                        <label class="form-label" asp-for="FamilyMembersList[i].BirthDate">Дата рождения</label>
                                        <div class="input-group input-group-merge">
                                            <span class="input-group-text">
                                                <i class="bi bi-calendar3"></i>
                                            </span>
                                            <input asp-for="FamilyMembersList[i].BirthDate" type="text"
                                                   class="form-control pickdate">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-4">
                                        <label asp-for="FamilyMembersList[i].Kinship" class="form-label">Вид родства</label>
                                        <input type="text" asp-for="FamilyMembersList[i].Kinship" class="form-control">
                                    </div>
                                    <div class="col-8">
                                        <label asp-for="FamilyMembersList[i].KinshipDokument" class="form-label">Документ, подтверждающий родство</label>
                                        <input type="text" asp-for="FamilyMembersList[i].KinshipDokument" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-1 mt-4">
                                <button type="button" class="btn btn-danger" onclick="blockRemove(this)"><i class="bi bi-trash"></i></button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row justify-content-center">
                <div class="col-2">
                    <button type="button" class="btn btn-primary" id="addLandscaping"><i class="bi bi-plus"></i></button>
                </div>
            </div>
            <hr />
            <h5 class="my-2">Приложенные документы</h5>
            <div id="appliedDocumentList" data-clone-list>
                @for (var i = 0; i < Model.AppliedDocumentList.Length; i++)
                {
                    <div class="g-3" id="clone@(i)" data-id="@i" data-clone>
                        <hr />
                        <h6 class="my-2 title">Документ @(i + 1)</h6>
                        <div class="row mb-3 align-items-center">
                            <div class="col-11">
                                <label asp-for="AppliedDocumentList[i].Name" class="form-label">Наименование</label>
                                <input type="text" list="Docs" asp-for="AppliedDocumentList[i].Name" class="form-control">
                                <datalist id="Docs">
                                    <option value="Документ удостоверяющий личность">Документ удостоверяющий личность</option>
                                    <option value="Свидетельство о рождении">Свидетельство о рождении</option>
                                    <option value="Свидетельство о заключении брака">Свидетельство о заключении брака</option>
                                    <option value="Свидетельство о расторжении брака">Свидетельство о расторжении брака</option>
                                    <option value="Свидетельство об установлении отцовства">Свидетельство об установлении отцовства</option>
                                    <option value="Расчётный счёт">Расчётный счёт</option>
                                    <option value="Сберкнижка">Сберкнижка</option>
                                    <option value="Трудовая книжка">Трудовая книжка</option>
                                    <option value="Свидетельство о регистрации по месту жительства/пребывания">Свидетельство о регистрации по месту жительства/пребывания</option>
                                    <option value="Удостоверение">Удостоверение</option>
                                    <option value="Справка МСЭ">Справка МСЭ</option>
                                    <option value="Ветеран труда РА">Ветеран труда РА</option>
                                </datalist>
                            </div>
                            <div class="col-1  mt-4">
                                <button type="button" class="btn btn-danger" onclick="blockRemove(this)"><i class="bi bi-trash"></i></button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row justify-content-center">
                <div class="col-2">
                    <button type="button" class="btn btn-primary" id="addAppliedDocument"><i class="bi bi-plus"></i></button>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>
