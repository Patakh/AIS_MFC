@model _6_BurialModel

<div id="additional-data-content">
    <div class="row g-3">
        <div class="col-8 mx-auto">
            <div class="row mb-3">
                <div class="col-7">
                    <label asp-for="DeceasedFIO" class="form-label">ФИО умершего</label>
                    <input type="text" asp-for="DeceasedFIO" class="form-control">
                </div>
                <div class="col">
                    <label class="form-label" asp-for="DeceasedBirthDate">Дата рождения</label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text">
                            <i class="bi bi-calendar3"></i>
                        </span>
                        <input asp-for="DeceasedBirthDate" type="text"
                               class="form-control pickdate">
                    </div>
                </div>
                <div class="col">
                    <label class="form-label" asp-for="DeathDate">Дата смерти</label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text">
                            <i class="bi bi-calendar3"></i>
                        </span>
