        new ("несовершеннолетнего", "несовершеннолетнего"),
        new ("недееспособного", "недееспособного"),
        new ("ограниченно дееспособного", "ограниченно дееспособного"),
    };
    IEnumerable<SelectListItem> appealType = new List<SelectListItem> {  
