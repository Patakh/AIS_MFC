                            <input class="form-check-input" type="checkbox" asp-for="TypePayment.TypeSixteen">
                            <label class="form-check-label" asp-for="TypePayment.TypeSixteen">Иное</label>
                        </div>
                        <div class="ms-3 ps-4" checkBlockBody>
                            <label class="form-label" asp-for="PleaseStopBARELY">дополнительный выбор</label>
                            <input type="text" class="form-control" asp-for="PleaseStopBARELY">
                        </div>
                    </div>
