                        <label class="form-check-label" asp-for="TypePayment.TypeEvelen">социальной пенсии по старости</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="TypePayment.TypeTwelve">
                        <label class="form-check-label" asp-for="TypePayment.TypeTwelve">социальной пенсии по инвалидности</label>
                    </div>
                    <div class="form-check">
