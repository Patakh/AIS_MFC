@model _29_TaxpayerConsentModel
<style>
    .form-check {
        margin-left: 10px;
    }

    .modal .form-check-input[type=radio] {
        margin-right: 10px;
    }
</style>

<div id="additional-data-content">
    <div class="row g-3">
        <div class="col-8 mx-auto">
            <div class="row mb-3">
                <div class="col-3">
                    <label class="form-label" asp-for="KPP">КПП</label>
                    <input type="text" class="form-control" asp-for="KPP">
                </div>
                <div class="col-3">
                    <label class="form-label" asp-for="CodeFNS">Код налогового органа</label>
                    <input type="text" class="form-control" asp-for="CodeFNS">
                </div>
            </div>
            <div class="row mb-3">
                <label class="form-label" asp-for="PleaseStopPayment">Налогоплательщик</label>
                <div class="col-12">
                    <div class="form-check">
                        <input name="PleaseStopPayment" id="PleaseStopPayment1" class="form-check-input" type="radio" value="1" checked="@(Model.PleaseStopPayment == "1")">
                        <label for="PleaseStopPayment1" class="form-check-label">руководитель организации</label>
                    </div>
                    <div class="form-check">
                        <input name="PleaseStopPayment" id="PleaseStopPayment2" class="form-check-input" type="radio" value="2" checked="@(Model.PleaseStopPayment == "2")">
                        <label for="PleaseStopPayment2" class="form-check-label">представитель налогоплательщика,  плательщика сбора, плательщика страховых взносов, налогового агента</label>
                    </div>
                    <div class="form-check">
                        <input name="PleaseStopPayment" id="PleaseStopPayment3" class="form-check-input" type="radio" value="3" checked="@(Model.PleaseStopPayment == "3")">
                        <label for="PleaseStopPayment3" class="form-check-label">физическое лицо</label>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-4">
                    <label class="form-label" asp-for="F">Фамилия</label>
                    <input type="text" asp-for="F" class="form-control" placeholder="Фамилия">
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="I">Имя</label>
                    <input type="text" asp-for="I" class="form-control" placeholder="Имя">
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="O">Отчество</label>
                    <input type="text" asp-for="O" class="form-control" placeholder="Отчество">
                </div>
            </div>
            <h6 class="my-2">Документ, подтверждающий полномочия представителя</h6>
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label" asp-for="AuthorityDocName">Наименование документа</label>
                    <input type="text" asp-for="AuthorityDocName" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-8">
                    <label class="form-label" asp-for="AuthorityDocSeriesNumber">Серия, номер</label>
                    <input type="text" asp-for="AuthorityDocSeriesNumber" class="form-control">
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="AuthorityDocIssueDate">Дата выдачи</label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text">
                            <i class="bi bi-calendar3"></i>
                        </span>
                        <input asp-for="AuthorityDocIssueDate" type="text" class="form-control pickdate">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    var additionalForm = $('#additional-data-content');

    $(function () {

        additionalForm.find("select.select2-nosearch").each(function () {
            $(this).select2({
                //dropdownParent: $("#mainModal"), для select модального окна
                minimumResultsForSearch: Infinity
            });
        });

        additionalForm.find("select.select2-search").each(function () {
            $(this).select2({
                //dropdownParent: $("#mainModal"),
            });
        });

        let options = { clearIncomplete: true, showMaskOnHover: false }; 

        additionalForm.find(".pickdate").datepicker({
            language: "ru",
            autoclose: true
        }).inputmask("99.99.9999", options);

        additionalForm.find("#KPP").inputmask("9{8}", options);
        additionalForm.find("#CodeFNS").inputmask("9{4}", options);
    });
</script>