<fieldset>
    <div class="row"> 
        <div class="col-12"> 
            <div class="row mb-3">
                <div class="col-12">
                    <div class="d-flex justify-content-between bg-employee p-3">
                        <div>
                            <div class="b-s-14">@Model.EmployeeFio</div>
                            <div class="r-l-12">@Model.EmployeeJob</div>
                        </div>
                        <div class="my-auto"> 
                            <span class="badge badge-text">Ознакомлен</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="b-s-16">@Model.Topic</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <div class="m-s-14">@Model.Text</div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="b-s-16">Приложения:</div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    @if (Model.Files.Any())
                    {
                        <div class="row">
                            @foreach (var item in Model.Files)
                            {
                                <a asp-action="DownloadBlank" asp-controller="Cases" asp-route-id="item.Id" asp-route-serviceId="item.ServiceId" target="_blank" class="col-2">
                                    <div class="row justify-content-center">
                                        <div class="col-5">
                                            <div class="file-icon @item.FileExtensions.Substring(1)"></div>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-12">
                                            <p class="mb-1 file-text">@item.FileName@item.FileExtensions</p>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</fieldset>


