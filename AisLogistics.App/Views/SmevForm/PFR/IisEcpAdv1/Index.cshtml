@using SmevRouter
@model AisLogistics.App.ViewModels.Cases.SmevCreateResponseModel
@{
    var applicants = Model.GetApplicants();
    var request = new PfrIisEcpAdv1RequestData
            {
                Fio = new(),
                IdentityDocument = new(),
                LivingAddress = new PfrPostAddress
                {
                    Region = new(),
                    Area = new(),
                    City = new(),
                    Settlement = new(),
                    Street = new(),
                    House = new(),
                    Building = new(),
                    Housing = new(),
                    Flat = new()
                },
                RegAddress = new PfrPostAddress
                {
                    Region = new(),
                    Area = new(),
                    City = new(),
                    Settlement = new(),
                    Street = new(),
                    House = new(),
                    Building = new(),
                    Housing = new(),
                    Flat = new()
                },
                BirthPlace = new(),
                BirthAct = new()
            };

    IEnumerable<SelectListItem> docTypeList = new List<SelectListItem>
    {
        new("Паспорт РФ", "PassportRf"),
        new("Свидетельство о рождении", "SvedRozhRf"),
        new("Паспорт моряка", "PassportSailor"),
